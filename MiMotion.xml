<homegearDevice version="1">
    <supportedDevices>
        <device id="MiMoton">
            <description>Xiaomi Smart Home Motion Sensor - homegear interface</description>
            <typeNumber>0x287b</typeNumber>
        </device>
    </supportedDevices>
    <runProgram>
    </runProgram>
    <properties/>
    <functions>
        <function channel="0" type="SETTINGS" channelCount="1">
            <properties/>
            <configParameters>custom_ch0_master</configParameters>
	    <variables>custom_ch0_values</variables>
        </function>
        <function channel="1" type="MOTION" channelCount="1">
            <properties/>
            <configParameters>config</configParameters>
            <variables>custom_ch1_motion</variables>
        </function>
    </functions>
    <packets/>
    <parameterGroups>
        <configParameters id="config"/>
        <configParameters id="custom_ch0_master">
            <parameter id="SID">
                <properties>
                    <unit></unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalString>
                    <defaultValue></defaultValue>
                </logicalString>
                <physicalString>
                    <operationType>config</operationType>
                </physicalString>
            </parameter>
            <parameter id="HEARTBEAT">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <unit></unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalDecimal/>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter> 
        </configParameters>
        <variables id="custom_ch0_values">
            <parameter id="VOLTAGE">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <unit>mV</unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalDecimal/>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter>
        </variables>
        <variables id="custom_ch1_motion">
            <parameter id="MOTION">
                <properties>
                    <writeable>true</writeable>
                    <addonWriteable>true</addonWriteable>
                    <unit></unit>
                    <casts>
                        <rpcBinary/>
                    </casts>
                </properties>
                <logicalInteger>
                </logicalInteger>
                <physicalInteger>
                    <operationType>store</operationType>
                </physicalInteger>
            </parameter>
        </variables>
    </parameterGroups>
</homegearDevice>

